<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title><% title %></title>
        <link rel="stylesheet" href="/stylesheets/style.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    </head>

    <body>
        <header>
            <img src="/images/logo.png" alt="Logo da Empresa" class="logo">

            <div class="header-right">
                <nav class="nav-links">
                    <a href="/">Home</a>
                    <a href="#">Criar</a>
                </nav>
    
                <div class="search-bar">
                    <i class="fas fa-search"></i>
                    <input type="text" placeholder="Pesquise no Quizze's">
                </div>

                <a href="/auth/login" class="btn btn-outline-primary" role="button" aria-pressed="true">Login</a>
            </div>
        </header>

        <main class="container-fluid">
            <section class="themes">
                <h2>Temas</h2>
                <div class="theme-icons-container text-center mb-3">
                    <%themes.forEach(theme => { %>
                        <a href="/?theme=<%= theme.id %>" class="theme-link btn btn-primary">
                            <%= theme.name %>
                        </a>
                    <% }); %>
                </div>
            </section>

            <section class="quizzes">
                <h2>Radar de Novidades</h2>
                
                <div class="row">
                    <%quizzes.forEach(quizz => { %>
                        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                            <div class="quiz-card">
                                <h3 class="quiz-card-title px-3">
                                    <%= quizz.title %>
                                </h3>
                                <a href="/?quizz=<%= quizz.id %>" class="quizz-link btn play-btn">
                                    <i class="fas fa-play me-2"></i>
                                    Jogar
                                </a>
                            </div>
                        </div>
                    <% }); %>
                </div>
            </section>
        </main>
    </body>
</html>